<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Post - Social Connect</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary: #6366f1;
      --primary-dark: #4f46e5;
      --primary-light: #818cf8;
      --secondary: #ec4899;
      --success: #10b981;
      --background: #0f172a;
      --surface: #1e293b;
      --surface-light: #334155;
      --text-primary: #f1f5f9;
      --text-secondary: #94a3b8;
      --border: #334155;
      --shadow: rgba(0, 0, 0, 0.3);
      --error: #ef4444;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(135deg, var(--background) 0%, #1a1f3a 100%);
      min-height: 100vh;
      color: var(--text-primary);
    }

    /* ===== NAVIGATION ===== */
    .navbar {
      background: var(--surface);
      border-bottom: 1px solid var(--border);
      padding: 16px 0;
      box-shadow: 0 4px 12px var(--shadow);
    }

    .navbar-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 24px;
      font-weight: 700;
      color: var(--text-primary);
      text-decoration: none;
    }

    .logo-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .logo-icon svg {
      width: 24px;
      height: 24px;
      color: white;
    }

    .btn-back {
      padding: 8px 16px;
      background: transparent;
      color: var(--text-secondary);
      border: 1px solid var(--border);
      border-radius: 8px;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }

    .btn-back:hover {
      background: var(--surface-light);
      color: var(--text-primary);
    }

    .btn-back svg {
      width: 16px;
      height: 16px;
    }

    /* ===== MAIN CONTENT ===== */
    .container {
      max-width: 680px;
      margin: 0 auto;
      padding: 40px 20px;
    }

    .card {
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 8px 24px var(--shadow);
    }

    .header {
      margin-bottom: 32px;
      text-align: center;
    }

    .header-icon {
      width: 64px;
      height: 64px;
      background: linear-gradient(135deg, var(--secondary) 0%, var(--primary) 100%);
      border-radius: 16px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 16px;
      box-shadow: 0 8px 20px rgba(236, 72, 153, 0.3);
    }

    .header-icon svg {
      width: 32px;
      height: 32px;
      color: white;
    }

    .header h1 {
      font-size: 28px;
      margin-bottom: 8px;
      color: var(--text-primary);
    }

    .header p {
      color: var(--text-secondary);
      font-size: 15px;
    }

    .form-group {
      margin-bottom: 24px;
    }

    label {
      display: block;
      color: var(--text-primary);
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 12px;
    }

    textarea {
      width: 100%;
      min-height: 200px;
      padding: 16px;
      background: var(--background);
      border: 2px solid var(--border);
      border-radius: 12px;
      color: var(--text-primary);
      font-size: 15px;
      font-family: inherit;
      line-height: 1.6;
      resize: vertical;
      transition: all 0.3s ease;
      outline: none;
    }

    textarea::placeholder {
      color: var(--text-secondary);
    }

    textarea:focus {
      border-color: var(--secondary);
      background: var(--surface-light);
      box-shadow: 0 0 0 4px rgba(236, 72, 153, 0.1);
    }

    .char-count {
      text-align: right;
      color: var(--text-secondary);
      font-size: 13px;
      margin-top: 8px;
    }

    /* ===== EXISTING MEDIA ===== */
    .existing-media {
      margin-bottom: 24px;
    }

    .media-section-title {
      font-size: 16px;
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: 12px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .media-section-title svg {
      width: 20px;
      height: 20px;
      color: var(--primary-light);
    }

    .existing-media-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: 12px;
      padding: 16px;
      background: var(--background);
      border: 1px solid var(--border);
      border-radius: 12px;
    }

    .existing-media-item {
      position: relative;
      aspect-ratio: 1;
      border-radius: 12px;
      overflow: hidden;
      background: var(--surface-light);
      border: 2px solid var(--border);
      transition: all 0.3s ease;
    }

    .existing-media-item:hover {
      border-color: var(--primary);
      transform: translateY(-2px);
    }

    .existing-media-item img,
    .existing-media-item video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .existing-media-delete {
      position: absolute;
      top: 6px;
      right: 6px;
      width: 28px;
      height: 28px;
      background: rgba(239, 68, 68, 0.95);
      border: none;
      border-radius: 50%;
      color: white;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      z-index: 10;
    }

    .existing-media-delete:hover {
      background: #dc2626;
      transform: scale(1.1);
    }

    .existing-media-delete svg {
      width: 16px;
      height: 16px;
    }

    .media-type-badge {
      position: absolute;
      bottom: 6px;
      left: 6px;
      padding: 4px 8px;
      background: rgba(15, 23, 42, 0.9);
      border-radius: 6px;
      font-size: 10px;
      font-weight: 600;
      text-transform: uppercase;
      color: var(--primary-light);
      letter-spacing: 0.5px;
    }

    .empty-media-message {
      text-align: center;
      padding: 32px;
      color: var(--text-secondary);
      font-size: 14px;
      background: var(--background);
      border: 1px dashed var(--border);
      border-radius: 12px;
    }

    /* ===== FILE UPLOAD ===== */
    .file-upload-section {
      margin-bottom: 24px;
    }

    .file-input-wrapper {
      position: relative;
      margin-bottom: 16px;
    }

    .file-input {
      display: none;
    }

    .file-label {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px;
      background: var(--background);
      border: 2px dashed var(--border);
      border-radius: 12px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .file-label:hover {
      border-color: var(--primary);
      background: var(--surface-light);
    }

    .file-label svg {
      width: 24px;
      height: 24px;
      color: var(--primary-light);
      flex-shrink: 0;
    }

    .file-label-text {
      flex: 1;
    }

    .file-label-title {
      font-size: 15px;
      color: var(--text-primary);
      font-weight: 600;
      margin-bottom: 4px;
    }

    .file-label-hint {
      font-size: 13px;
      color: var(--text-secondary);
    }

    .file-preview {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: 12px;
      margin-top: 12px;
    }

    .preview-item {
      position: relative;
      aspect-ratio: 1;
      border-radius: 12px;
      overflow: hidden;
      background: var(--background);
      border: 1px solid var(--border);
    }

    .preview-item img,
    .preview-item video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .preview-remove {
      position: absolute;
      top: 6px;
      right: 6px;
      width: 24px;
      height: 24px;
      background: rgba(239, 68, 68, 0.9);
      border: none;
      border-radius: 50%;
      color: white;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
    }

    .preview-remove:hover {
      background: #ef4444;
      transform: scale(1.1);
    }

    .preview-remove svg {
      width: 14px;
      height: 14px;
    }

    .actions {
      display: flex;
      gap: 12px;
      margin-top: 32px;
    }

    .btn {
      flex: 1;
      padding: 14px 24px;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      text-decoration: none;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--secondary) 0%, var(--primary) 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(236, 72, 153, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(236, 72, 153, 0.4);
    }

    .btn-primary svg {
      width: 20px;
      height: 20px;
    }

    .btn-secondary {
      background: transparent;
      color: var(--text-secondary);
      border: 2px solid var(--border);
    }

    .btn-secondary:hover {
      background: var(--surface-light);
      color: var(--text-primary);
      border-color: var(--surface-light);
    }

    .info-box {
      margin-top: 24px;
      padding: 16px;
      background: var(--background);
      border: 1px solid var(--border);
      border-left: 4px solid var(--primary);
      border-radius: 12px;
    }

    .info-box-header {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 8px;
    }

    .info-box-header svg {
      width: 18px;
      height: 18px;
      color: var(--primary-light);
      flex-shrink: 0;
    }

    .info-box-header span {
      font-size: 14px;
      font-weight: 600;
      color: var(--text-primary);
    }

    .info-box-content {
      font-size: 13px;
      color: var(--text-secondary);
      line-height: 1.5;
    }

    @media (max-width: 768px) {
      .container {
        padding: 24px 16px;
      }

      .card {
        padding: 24px;
      }

      .header h1 {
        font-size: 24px;
      }

      .actions {
        flex-direction: column;
      }

      .existing-media-grid,
      .file-preview {
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
      }
    }
  </style>
</head>
<body>
  <!-- ===== NAVIGATION ===== -->
  <nav class="navbar">
    <div class="navbar-container">
      <a href="/posts" class="logo">
        <div class="logo-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        Social Connect
      </a>

      <a href="/posts/<%= post.id %>" class="btn-back">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Cancel
      </a>
    </div>
  </nav>

  <!-- ===== MAIN CONTENT ===== -->
  <div class="container">
    <div class="card">
      <div class="header">
        <div class="header-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        </div>
        <h1>Edit Your Post</h1>
        <p>Update your thoughts and save changes</p>
      </div>

      <!-- ===== EXISTING MEDIA ===== -->
      <% if (post.media && post.media.length > 0) { %>
        <div class="existing-media">
          <div class="media-section-title">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Current Media (Click X to delete)
          </div>
          <div class="existing-media-grid">
            <% post.media.forEach(media => { %>
              <div class="existing-media-item" id="media-<%= media.id %>">
                <% if (media.type === 'image') { %>
                  <img src="/uploads/posts/<%= media.filename %>" alt="Post image">
                  <div class="media-type-badge">Image</div>
                <% } else if (media.type === 'video') { %>
                  <video src="/uploads/posts/<%= media.filename %>"></video>
                  <div class="media-type-badge">Video</div>
                <% } %>
                <button 
                  type="button" 
                  class="existing-media-delete" 
                  onclick="deleteMedia(<%= post.id %>, <%= media.id %>)"
                  title="Delete this media"
                >
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                  </svg>
                </button>
              </div>
            <% }) %>
          </div>
        </div>
      <% } else { %>
        <div class="existing-media">
          <div class="media-section-title">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Current Media
          </div>
          <div class="empty-media-message">
            No media attached to this post yet
          </div>
        </div>
      <% } %>

      <form method="POST" action="/posts/<%= post.id %>?_method=PATCH" id="editForm" enctype="multipart/form-data">
        <div class="form-group">
          <label for="content">Post Content</label>
          <textarea 
            id="content"
            name="content" 
            required
            maxlength="5000"
          ><%= post.content %></textarea>
          <div class="char-count">
            <span id="charCount"><%= post.content.length %></span> / 5000 characters
          </div>
        </div>

        <!-- ===== ADD NEW IMAGES ===== -->
        <div class="file-upload-section">
          <div class="file-input-wrapper">
            <input 
              type="file" 
              id="images" 
              name="images" 
              class="file-input" 
              accept="image/jpeg,image/jpg,image/png,image/gif,image/webp"
              multiple
            />
            <label for="images" class="file-label">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <div class="file-label-text">
                <div class="file-label-title">Add New Images</div>
                <div class="file-label-hint">JPEG, PNG, GIF, WebP - Max 5 MB each</div>
              </div>
            </label>
            <div id="imagePreview" class="file-preview"></div>
          </div>
        </div>

        <!-- ===== ADD NEW VIDEOS ===== -->
        <div class="file-upload-section">
          <div class="file-input-wrapper">
            <input 
              type="file" 
              id="videos" 
              name="videos" 
              class="file-input" 
              accept="video/mp4,video/mpeg,video/quicktime,video/x-msvideo"
              multiple
            />
            <label for="videos" class="file-label">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              <div class="file-label-text">
                <div class="file-label-title">Add New Videos</div>
                <div class="file-label-hint">MP4, MPEG, QuickTime, AVI - Max 15 MB each</div>
              </div>
            </label>
            <div id="videoPreview" class="file-preview"></div>
          </div>
        </div>

        <div class="actions">
          <a href="/posts/<%= post.id %>" class="btn btn-secondary">
            Discard Changes
          </a>
          <button type="submit" class="btn btn-primary">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Save Changes
          </button>
        </div>
      </form>

      <div class="info-box">
        <div class="info-box-header">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Editing Tips</span>
        </div>
        <div class="info-box-content">
          You can delete existing media by clicking the X button. Add new images or videos using the upload sections above. Your changes will be saved when you click "Save Changes".
        </div>
      </div>
    </div>
  </div>

  <script>
    // Character counter
    const textarea = document.getElementById('content');
    const charCount = document.getElementById('charCount');

    textarea.addEventListener('input', function() {
      charCount.textContent = this.value.length;
    });

    // Auto-expand textarea
    textarea.addEventListener('input', function() {
      this.style.height = 'auto';
      this.style.height = Math.max(200, this.scrollHeight) + 'px';
    });

    // Set initial height
    textarea.style.height = Math.max(200, textarea.scrollHeight) + 'px';

    // Delete existing media
    async function deleteMedia(postId, mediaId) {
      if (!confirm('Are you sure you want to delete this media?')) {
        return;
      }
      console.log("post id : ",postId,"media id : ",mediaId);
      try {
        const response = await fetch(`/posts/${postId}/media/${mediaId}?_method=DELETE`, {
          method: 'DELETE',
          headers: {
            'Content-Type': 'application/json',
          },
        });
        console.log("response : ",response);
        if (response.ok) {
          // Remove the media item from the DOM
          const mediaElement = document.getElementById(`media-${mediaId}`);
          if (mediaElement) {
            mediaElement.style.opacity = '0';
            mediaElement.style.transform = 'scale(0.8)';
            setTimeout(() => {
              mediaElement.remove();
              
              // Check if there are any media items left
              const mediaGrid = document.querySelector('.existing-media-grid');
              if (mediaGrid && mediaGrid.children.length === 0) {
                // Show empty state
                const existingMedia = document.querySelector('.existing-media');
                existingMedia.innerHTML = `
                  <div class="media-section-title">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    Current Media
                  </div>
                  <div class="empty-media-message">
                    No media attached to this post yet
                  </div>
                `;
              }
            }, 300);
          }
        } else {
          alert('Failed to delete media. Please try again.');
        }
      } catch (error) {
        console.error('Error deleting media:', error);
        alert('An error occurred while deleting media.');
      }
    }

    // Image preview
    const imageInput = document.getElementById('images');
    const imagePreview = document.getElementById('imagePreview');
    let imageFiles = [];

    imageInput.addEventListener('change', function(e) {
      const files = Array.from(e.target.files);
      
      files.forEach(file => {
        if (file.size > 5 * 1024 * 1024) {
          alert(`Image ${file.name} exceeds 5 MB limit`);
          return;
        }
        imageFiles.push(file);
      });

      updateImagePreview();
    });

    function updateImagePreview() {
      imagePreview.innerHTML = '';
      
      imageFiles.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = function(e) {
          const div = document.createElement('div');
          div.className = 'preview-item';
          div.innerHTML = `
            <img src="${e.target.result}" alt="Preview">
            <button type="button" class="preview-remove" onclick="removeImage(${index})">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          `;
          imagePreview.appendChild(div);
        };
        reader.readAsDataURL(file);
      });

      // Update file input
      const dataTransfer = new DataTransfer();
      imageFiles.forEach(file => dataTransfer.items.add(file));
      imageInput.files = dataTransfer.files;
    }

    function removeImage(index) {
      imageFiles.splice(index, 1);
      updateImagePreview();
    }

    // Video preview
    const videoInput = document.getElementById('videos');
    const videoPreview = document.getElementById('videoPreview');
    let videoFiles = [];

    videoInput.addEventListener('change', function(e) {
      const files = Array.from(e.target.files);
      
      files.forEach(file => {
        if (file.size > 15 * 1024 * 1024) {
          alert(`Video ${file.name} exceeds 15 MB limit`);
          return;
        }
        videoFiles.push(file);
      });

      updateVideoPreview();
    });

    function updateVideoPreview() {
      videoPreview.innerHTML = '';
      
      videoFiles.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = function(e) {
          const div = document.createElement('div');
          div.className = 'preview-item';
          div.innerHTML = `
            <video src="${e.target.result}" controls></video>
            <button type="button" class="preview-remove" onclick="removeVideo(${index})">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          `;
          videoPreview.appendChild(div);
        };
        reader.readAsDataURL(file);
      });

      // Update file input
      const dataTransfer = new DataTransfer();
      videoFiles.forEach(file => dataTransfer.items.add(file));
      videoInput.files = dataTransfer.files;
    }

    function removeVideo(index) {
      videoFiles.splice(index, 1);
      updateVideoPreview();
    }
  </script>
</body>
