<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Post - Social Connect</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --primary: #6366f1;
      --primary-dark: #4f46e5;
      --primary-light: #818cf8;
      --secondary: #ec4899;
      --success: #10b981;
      --background: #0f172a;
      --surface: #1e293b;
      --surface-light: #334155;
      --text-primary: #f1f5f9;
      --text-secondary: #94a3b8;
      --border: #334155;
      --shadow: rgba(0, 0, 0, 0.3);
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
      background: linear-gradient(135deg, var(--background) 0%, #1a1f3a 100%);
      min-height: 100vh;
      color: var(--text-primary);
    }

    /* ===== NAVIGATION ===== */
    .navbar {
      background: var(--surface);
      border-bottom: 1px solid var(--border);
      padding: 16px 0;
      box-shadow: 0 4px 12px var(--shadow);
    }

    .navbar-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 24px;
      font-weight: 700;
      color: var(--text-primary);
      text-decoration: none;
    }

    .logo-icon {
      width: 40px;
      height: 40px;
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      border-radius: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .logo-icon svg {
      width: 24px;
      height: 24px;
      color: white;
    }

    .btn-back {
      padding: 8px 16px;
      background: transparent;
      color: var(--text-secondary);
      border: 1px solid var(--border);
      border-radius: 8px;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }

    .btn-back:hover {
      background: var(--surface-light);
      color: var(--text-primary);
    }

    .btn-back svg {
      width: 16px;
      height: 16px;
    }

    /* ===== MAIN CONTENT ===== */
    .container {
      max-width: 680px;
      margin: 0 auto;
      padding: 40px 20px;
    }

    .card {
      background: var(--surface);
      border: 1px solid var(--border);
      border-radius: 20px;
      padding: 40px;
      box-shadow: 0 8px 24px var(--shadow);
    }

    .header {
      margin-bottom: 32px;
      text-align: center;
    }

    .header-icon {
      width: 64px;
      height: 64px;
      background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
      border-radius: 16px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 16px;
      box-shadow: 0 8px 20px rgba(99, 102, 241, 0.3);
    }

    .header-icon svg {
      width: 32px;
      height: 32px;
      color: white;
    }

    .header h1 {
      font-size: 28px;
      margin-bottom: 8px;
      color: var(--text-primary);
    }

    .header p {
      color: var(--text-secondary);
      font-size: 15px;
    }

    .form-group {
      margin-bottom: 24px;
    }

    label {
      display: block;
      color: var(--text-primary);
      font-size: 14px;
      font-weight: 600;
      margin-bottom: 12px;
    }

    textarea {
      width: 100%;
      min-height: 180px;
      padding: 16px;
      background: var(--background);
      border: 2px solid var(--border);
      border-radius: 12px;
      color: var(--text-primary);
      font-size: 15px;
      font-family: inherit;
      line-height: 1.6;
      resize: vertical;
      transition: all 0.3s ease;
      outline: none;
    }

    textarea::placeholder {
      color: var(--text-secondary);
    }

    textarea:focus {
      border-color: var(--primary);
      background: var(--surface-light);
      box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
    }

    .char-count {
      text-align: right;
      color: var(--text-secondary);
      font-size: 13px;
      margin-top: 8px;
    }

    /* ===== FILE UPLOAD ===== */
    .file-upload-section {
      margin-bottom: 24px;
    }

    .file-input-wrapper {
      position: relative;
      margin-bottom: 16px;
    }

    .file-input {
      display: none;
    }

    .file-label {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 16px;
      background: var(--background);
      border: 2px dashed var(--border);
      border-radius: 12px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .file-label:hover {
      border-color: var(--primary);
      background: var(--surface-light);
    }

    .file-label svg {
      width: 24px;
      height: 24px;
      color: var(--primary-light);
      flex-shrink: 0;
    }

    .file-label-text {
      flex: 1;
    }

    .file-label-title {
      font-size: 15px;
      color: var(--text-primary);
      font-weight: 600;
      margin-bottom: 4px;
    }

    .file-label-hint {
      font-size: 13px;
      color: var(--text-secondary);
    }

    .file-preview {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
      gap: 12px;
      margin-top: 12px;
    }

    .preview-item {
      position: relative;
      aspect-ratio: 1;
      border-radius: 12px;
      overflow: hidden;
      background: var(--background);
      border: 1px solid var(--border);
    }

    .preview-item img,
    .preview-item video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .preview-remove {
      position: absolute;
      top: 6px;
      right: 6px;
      width: 24px;
      height: 24px;
      background: rgba(239, 68, 68, 0.9);
      border: none;
      border-radius: 50%;
      color: white;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
    }

    .preview-remove:hover {
      background: #ef4444;
      transform: scale(1.1);
    }

    .preview-remove svg {
      width: 14px;
      height: 14px;
    }

    .actions {
      display: flex;
      gap: 12px;
      margin-top: 32px;
    }

    .btn {
      flex: 1;
      padding: 14px 24px;
      border: none;
      border-radius: 12px;
      font-size: 16px;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
      color: white;
      box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 20px rgba(99, 102, 241, 0.4);
    }

    .btn-primary svg {
      width: 20px;
      height: 20px;
    }

    .btn-secondary {
      background: transparent;
      color: var(--text-secondary);
      border: 2px solid var(--border);
    }

    .btn-secondary:hover {
      background: var(--surface-light);
      color: var(--text-primary);
      border-color: var(--surface-light);
    }

    .tips {
      margin-top: 32px;
      padding: 20px;
      background: var(--background);
      border: 1px solid var(--border);
      border-radius: 12px;
    }

    .tips h3 {
      font-size: 14px;
      color: var(--text-primary);
      margin-bottom: 12px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .tips h3 svg {
      width: 18px;
      height: 18px;
      color: var(--primary-light);
    }

    .tips ul {
      list-style: none;
      padding: 0;
    }

    .tips li {
      color: var(--text-secondary);
      font-size: 13px;
      padding: 6px 0;
      padding-left: 24px;
      position: relative;
    }

    .tips li::before {
      content: 'â€¢';
      position: absolute;
      left: 8px;
      color: var(--primary-light);
    }

    @media (max-width: 768px) {
      .container {
        padding: 24px 16px;
      }

      .card {
        padding: 24px;
      }

      .header h1 {
        font-size: 24px;
      }

      .actions {
        flex-direction: column;
      }

      .file-preview {
        grid-template-columns: repeat(auto-fill, minmax(100px, 1fr));
      }
    }
  </style>
</head>
<body>
  <!-- ===== NAVIGATION ===== -->
  <nav class="navbar">
    <div class="navbar-container">
      <a href="/posts" class="logo">
        <div class="logo-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
          </svg>
        </div>
        Social Connect
      </a>

      <a href="/posts" class="btn-back">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back
      </a>
    </div>
  </nav>

  <!-- ===== MAIN CONTENT ===== -->
  <div class="container">
    <div class="card">
      <div class="header">
        <div class="header-icon">
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
        </div>
        <h1>Create New Post</h1>
        <p>Share your thoughts with the community</p>
      </div>

      <form method="POST" action="/posts" id="postForm" enctype="multipart/form-data">
        <div class="form-group">
          <label for="content">What's on your mind?</label>
          <textarea 
            id="content"
            name="content" 
            placeholder="Write something interesting, inspiring, or thought-provoking..."
            required
            maxlength="5000"
          ></textarea>
          <div class="char-count">
            <span id="charCount">0</span> / 5000 characters
          </div>
        </div>

        <!-- ===== IMAGE UPLOAD ===== -->
        <div class="file-upload-section">
          <div class="file-input-wrapper">
            <input 
              type="file" 
              id="images" 
              name="images" 
              class="file-input" 
              accept="image/jpeg,image/jpg,image/png,image/gif,image/webp"
              multiple
            />
            <label for="images" class="file-label">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <div class="file-label-text">
                <div class="file-label-title">Add Images</div>
                <div class="file-label-hint">JPEG, PNG, GIF, WebP - Max 5 MB each</div>
              </div>
            </label>
            <div id="imagePreview" class="file-preview"></div>
          </div>
        </div>

        <!-- ===== VIDEO UPLOAD ===== -->
        <div class="file-upload-section">
          <div class="file-input-wrapper">
            <input 
              type="file" 
              id="videos" 
              name="videos" 
              class="file-input" 
              accept="video/mp4,video/mpeg,video/quicktime,video/x-msvideo"
              multiple
            />
            <label for="videos" class="file-label">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
              </svg>
              <div class="file-label-text">
                <div class="file-label-title">Add Videos</div>
                <div class="file-label-hint">MP4, MPEG, QuickTime, AVI - Max 15 MB each</div>
              </div>
            </label>
            <div id="videoPreview" class="file-preview"></div>
          </div>
        </div>

        <div class="actions">
          <button type="button" class="btn btn-secondary" onclick="window.location.href='/posts'">
            Cancel
          </button>
          <button type="submit" class="btn btn-primary">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
            Publish Post
          </button>
        </div>
      </form>

      <div class="tips">
        <h3>
          <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
          </svg>
          Tips for a great post
        </h3>
        <ul>
          <li>Be authentic and share your genuine thoughts</li>
          <li>Keep it concise and engaging</li>
          <li>Add value to your community</li>
          <li>Be respectful and considerate</li>
          <li>Images should be under 5 MB, videos under 15 MB</li>
        </ul>
      </div>
    </div>
  </div>

  <script>
    // Character counter
    const textarea = document.getElementById('content');
    const charCount = document.getElementById('charCount');

    textarea.addEventListener('input', function() {
      charCount.textContent = this.value.length;
    });

    // Auto-expand textarea
    textarea.addEventListener('input', function() {
      this.style.height = 'auto';
      this.style.height = Math.max(180, this.scrollHeight) + 'px';
    });

    // Image preview
    const imageInput = document.getElementById('images');
    const imagePreview = document.getElementById('imagePreview');
    let imageFiles = [];

    imageInput.addEventListener('change', function(e) {
      const files = Array.from(e.target.files);
      
      files.forEach(file => {
        if (file.size > 5 * 1024 * 1024) {
          alert(`Image ${file.name} exceeds 5 MB limit`);
          return;
        }
        imageFiles.push(file);
      });

      updateImagePreview();
    });

    function updateImagePreview() {
      imagePreview.innerHTML = '';
      
      imageFiles.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = function(e) {
          const div = document.createElement('div');
          div.className = 'preview-item';
          div.innerHTML = `
            <img src="${e.target.result}" alt="Preview">
            <button type="button" class="preview-remove" onclick="removeImage(${index})">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          `;
          imagePreview.appendChild(div);
        };
        reader.readAsDataURL(file);
      });

      // Update file input
      const dataTransfer = new DataTransfer();
      imageFiles.forEach(file => dataTransfer.items.add(file));
      imageInput.files = dataTransfer.files;
    }

    function removeImage(index) {
      imageFiles.splice(index, 1);
      updateImagePreview();
    }

    // Video preview
    const videoInput = document.getElementById('videos');
    const videoPreview = document.getElementById('videoPreview');
    let videoFiles = [];

    videoInput.addEventListener('change', function(e) {
      const files = Array.from(e.target.files);
      
      files.forEach(file => {
        if (file.size > 15 * 1024 * 1024) {
          alert(`Video ${file.name} exceeds 15 MB limit`);
          return;
        }
        videoFiles.push(file);
      });

      updateVideoPreview();
    });

    function updateVideoPreview() {
      videoPreview.innerHTML = '';
      
      videoFiles.forEach((file, index) => {
        const reader = new FileReader();
        reader.onload = function(e) {
          const div = document.createElement('div');
          div.className = 'preview-item';
          div.innerHTML = `
            <video src="${e.target.result}" controls></video>
            <button type="button" class="preview-remove" onclick="removeVideo(${index})">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </button>
          `;
          videoPreview.appendChild(div);
        };
        reader.readAsDataURL(file);
      });

      // Update file input
      const dataTransfer = new DataTransfer();
      videoFiles.forEach(file => dataTransfer.items.add(file));
      videoInput.files = dataTransfer.files;
    }

    function removeVideo(index) {
      videoFiles.splice(index, 1);
      updateVideoPreview();
    }
  </script>
</body>
</html>
