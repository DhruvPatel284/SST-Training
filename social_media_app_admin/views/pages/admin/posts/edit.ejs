<%- contentFor('HeaderCss') %>
<!-- Sweet Alert css-->
<link href="/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />

<%- contentFor('body') %>
<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card">
      <div class="card-header align-items-center d-flex">
        <h4 class="card-title mb-0 flex-grow-1">Edit Post</h4>
        <a href="/posts/<%= post.id %>" class="btn btn-sm btn-outline-secondary">
          <i class="ri-arrow-left-line me-1"></i> Back
        </a>
      </div>

      <div class="card-body">
        <% if (errors && errors.general) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="ri-error-warning-line me-2"></i>
          <%= errors.general[0] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>
        
        <% if (errors && errors.media) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <i class="ri-file-warning-line me-2"></i>
          <%= errors.media[0] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <form
          action="/admin/posts/<%= post.id %>?_method=PUT"
          method="POST"
          enctype="multipart/form-data"
          class="needs-validation"
          novalidate
        >
          <!-- Content -->
          <div class="mb-3">
            <label for="content" class="form-label">Post Content *</label>
            <textarea
              class="form-control"
              name="content"
              id="content"
              rows="5"
              required
            ><%= old ? old.content : post.content %></textarea>
            <% if (errors && errors.content) { %>
            <div class="text-danger"><%= errors.content[0] %></div>
            <% } %>
          </div>

          <!-- Existing Images -->
          <% if (post.images && post.images.length > 0) { %>
          <div class="mb-3">
            <label class="form-label">Existing Images</label>
            <div class="d-flex flex-wrap gap-2" id="existing-images">
              <% post.images.forEach(function(imageObj) { %>
              <div class="position-relative" data-filename="<%= imageObj.filename %>">
                <img
                  src="/uploads/posts/<%= imageObj.filename %>"
                  class="img-thumbnail"
                  style="max-width: 150px; max-height: 150px; object-fit: cover;"
                />
                <button
                  type="button"
                  class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1 remove-media"
                  data-type="image"
                  data-filename="<%= imageObj.filename %>"
                  data-bs-toggle="modal"
                  data-bs-target="#deleteMediaModal"
                >
                  <i class="ri-close-line"></i>
                </button>
              </div>
              <% }); %>
            </div>
          </div>
          <% } %>

          <!-- Existing Videos -->
          <% if (post.videos && post.videos.length > 0) { %>
          <div class="mb-3">
            <label class="form-label">Existing Videos</label>
            <div class="d-flex flex-wrap gap-2" id="existing-videos">
              <% post.videos.forEach(function(videoObj) { %>
              <div class="position-relative" data-filename="<%= videoObj.filename %>">
                <video
                  src="/uploads/posts/<%= videoObj.filename %>"
                  class="border rounded"
                  style="max-width: 200px; max-height: 150px;"
                  controls
                ></video>
                <button
                  type="button"
                  class="btn btn-danger btn-sm position-absolute top-0 end-0 m-1 remove-media"
                  data-type="video"
                  data-filename="<%= videoObj.filename %>"
                  data-bs-toggle="modal"
                  data-bs-target="#deleteMediaModal"
                >
                  <i class="ri-close-line"></i>
                </button>
              </div>
              <% }); %>
            </div>
          </div>
          <% } %>

          <!-- Hidden inputs to track kept media -->
          <input type="hidden" name="keepImages" id="keepImages" 
            value="<%= post.images ? post.images.map(i => i.filename).join(',') : '' %>" />
          <input type="hidden" name="keepVideos" id="keepVideos" 
            value="<%= post.videos ? post.videos.map(v => v.filename).join(',') : '' %>" />

          <!-- Add New Images -->
          <div class="mb-3">
            <label for="images" class="form-label">
              Add New Images <small class="text-muted">(Max 5 MB each)</small>
            </label>
            <input
              type="file"
              class="form-control"
              name="images"
              id="images"
              accept="image/jpeg,image/jpg,image/png,image/gif,image/webp"
              multiple
            />
          </div>

          <!-- Add New Videos -->
          <div class="mb-3">
            <label for="videos" class="form-label">
              Add New Videos <small class="text-muted">(Max 15 MB each)</small>
            </label>
            <input
              type="file"
              class="form-control"
              name="videos"
              id="videos"
              accept="video/mp4,video/mpeg,video/quicktime,video/x-msvideo"
              multiple
            />
          </div>

          <!-- Preview Section for new uploads -->
          <div id="image-preview" class="mb-3"></div>
          <div id="video-preview" class="mb-3"></div>

          <!-- Submit -->
          <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
              <i class="ri-save-line me-1"></i> Update Post
            </button>
            <a href="/posts/<%= post.id %>" class="btn btn-light">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Delete Media Confirmation Modal -->
<div
  id="deleteMediaModal"
  class="modal fade zoomIn"
  tabindex="-1"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
          id="deleteMediaModal-close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="mt-2 text-center">
          <lord-icon
            src="https://cdn.lordicon.com/gsqxdxog.json"
            trigger="loop"
            colors="primary:#f7b84b,secondary:#f06548"
            style="width: 100px; height: 100px"
          ></lord-icon>
          <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
            <h4>Are you sure?</h4>
            <p class="text-muted mx-4 mb-0" id="media-delete-message">
              Are you sure you want to remove this media?
            </p>
            <input type="hidden" id="modal-media-filename" />
            <input type="hidden" id="modal-media-type" />
          </div>
        </div>
        <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
          <button
            type="button"
            class="btn w-sm btn-light"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            type="button"
            class="btn w-sm btn-danger"
            id="confirm-delete-media"
          >
            Yes, Delete It!
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %>

<!-- Sweet Alerts js -->
<script src="/assets/libs/sweetalert2/sweetalert2.min.js"></script>

<script>
  // Store media info when delete button is clicked
  document.querySelectorAll('.remove-media').forEach(btn => {
    btn.addEventListener('click', function () {
      const filename = this.dataset.filename;
      const type = this.dataset.type;
      
      // Store in modal hidden inputs
      document.getElementById('modal-media-filename').value = filename;
      document.getElementById('modal-media-type').value = type;
      
      // Update modal message
      const mediaType = type === 'image' ? 'image' : 'video';
      document.getElementById('media-delete-message').textContent = 
        `Are you sure you want to remove this ${mediaType}?`;
    });
  });

  // Handle actual deletion when confirmed
  document.getElementById('confirm-delete-media').addEventListener('click', function () {
    const filename = document.getElementById('modal-media-filename').value;
    const type = document.getElementById('modal-media-type').value;
    
    if (!filename || !type) return;
    
    // Find and remove the media container from DOM
    const container = document.querySelector(`[data-filename="${filename}"]`);
    if (container) {
      container.remove();
    }
    
    // Update hidden input to exclude this file
    const inputId = type === 'image' ? 'keepImages' : 'keepVideos';
    const input = document.getElementById(inputId);
    const files = input.value.split(',').filter(f => f && f !== filename);
    input.value = files.join(',');
    
    // Close modal
    const modal = bootstrap.Modal.getInstance(document.getElementById('deleteMediaModal'));
    if (modal) {
      modal.hide();
    }
  });

  // Image preview for new uploads
  document.getElementById('images').addEventListener('change', function (e) {
    const preview = document.getElementById('image-preview');
    preview.innerHTML = '';
    
    const validImageTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'];
    const maxSize = 5 * 1024 * 1024; // 5 MB
    const files = Array.from(this.files);
    const validFiles = [];
    
    for (const file of files) {
      // Check file type
      if (!validImageTypes.includes(file.type)) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid File Type',
          text: `"${file.name}" is not a valid image file. Please upload JPEG, PNG, GIF, or WebP images only.`,
          confirmButtonColor: '#3085d6',
        });
        continue;
      }
      
      // Check file size
      if (file.size > maxSize) {
        Swal.fire({
          icon: 'error',
          title: 'File Too Large',
          text: `"${file.name}" exceeds the 5 MB size limit. Please choose a smaller image.`,
          confirmButtonColor: '#3085d6',
        });
        continue;
      }
      
      validFiles.push(file);
    }
    
    // Clear input and set only valid files
    if (validFiles.length !== files.length) {
      const dataTransfer = new DataTransfer();
      validFiles.forEach(file => dataTransfer.items.add(file));
      this.files = dataTransfer.files;
    }
    
    // Show previews for valid files
    if (validFiles.length > 0) {
      const title = document.createElement('h6');
      title.className = 'mb-2';
      title.textContent = 'New Image Previews:';
      preview.appendChild(title);
      
      const row = document.createElement('div');
      row.className = 'd-flex flex-wrap gap-2';
      
      validFiles.forEach(file => {
        const reader = new FileReader();
        reader.onload = function (event) {
          const img = document.createElement('img');
          img.src = event.target.result;
          img.className = 'img-thumbnail';
          img.style.maxWidth = '150px';
          img.style.maxHeight = '150px';
          img.style.objectFit = 'cover';
          row.appendChild(img);
        };
        reader.readAsDataURL(file);
      });
      
      preview.appendChild(row);
    }
  });

  // Video preview for new uploads
  document.getElementById('videos').addEventListener('change', function (e) {
    const preview = document.getElementById('video-preview');
    preview.innerHTML = '';
    
    const validVideoTypes = ['video/mp4', 'video/mpeg', 'video/quicktime', 'video/x-msvideo'];
    const maxSize = 15 * 1024 * 1024; // 15 MB
    const files = Array.from(this.files);
    const validFiles = [];
    
    for (const file of files) {
      // Check file type
      if (!validVideoTypes.includes(file.type)) {
        Swal.fire({
          icon: 'error',
          title: 'Invalid File Type',
          text: `"${file.name}" is not a valid video file. Please upload MP4, MPEG, QuickTime, or AVI videos only.`,
          confirmButtonColor: '#3085d6',
        });
        continue;
      }
      
      // Check file size
      if (file.size > maxSize) {
        Swal.fire({
          icon: 'error',
          title: 'File Too Large',
          text: `"${file.name}" exceeds the 15 MB size limit. Please choose a smaller video.`,
          confirmButtonColor: '#3085d6',
        });
        continue;
      }
      
      validFiles.push(file);
    }
    
    // Clear input and set only valid files
    if (validFiles.length !== files.length) {
      const dataTransfer = new DataTransfer();
      validFiles.forEach(file => dataTransfer.items.add(file));
      this.files = dataTransfer.files;
    }
    
    // Show previews for valid files
    if (validFiles.length > 0) {
      const title = document.createElement('h6');
      title.className = 'mb-2';
      title.textContent = 'New Video Previews:';
      preview.appendChild(title);
      
      const row = document.createElement('div');
      row.className = 'd-flex flex-wrap gap-2';
      
      validFiles.forEach(file => {
        const video = document.createElement('video');
        video.src = URL.createObjectURL(file);
        video.className = 'border rounded';
        video.style.maxWidth = '200px';
        video.style.maxHeight = '150px';
        video.controls = true;
        row.appendChild(video);
      });
      
      preview.appendChild(row);
    }
  });
</script>
