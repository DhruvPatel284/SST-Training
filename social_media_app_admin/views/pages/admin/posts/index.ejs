<!-- Sweet Alert css-->
<link href="/assets/libs/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css" />

<style>
  #post-table_filter {
    float: right;
  }
  .badge-reviewed   { background-color: #0ab39c; }
  .badge-unreviewed { background-color: #f06548; }

  /* Always show sort arrows on the RIGHT side of the header text */
  #post-table thead th {
    text-align: left;
  }
  #post-table thead th.sorting::after,
  #post-table thead th.sorting_asc::after,
  #post-table thead th.sorting_desc::after,
  #post-table thead th.sorting_asc_disabled::after,
  #post-table thead th.sorting_desc_disabled::after {
    right: 8px;
    left: auto;
  }
  /* Remove the left-side arrow that numeric columns add */
  #post-table thead th.sorting::before,
  #post-table thead th.sorting_asc::before,
  #post-table thead th.sorting_desc::before {
    display: none;
  }
</style>
