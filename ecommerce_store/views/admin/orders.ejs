<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Orders - Admin</title>
  <link rel="stylesheet" href="/css/main.css">
  <!-- DataTables CSS -->
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar" style="background: var(--gray-900); border-bottom-color: var(--gray-800);">
    <div class="container navbar-container">
      <a href="/admin" class="navbar-brand" style="color: white;">üëë Admin Panel</a>
      <ul class="navbar-nav">
        <li><a href="/admin" class="nav-link" style="color: var(--gray-300);">Dashboard</a></li>
        <li><a href="/admin/products" class="nav-link" style="color: var(--gray-300);">Products</a></li>
        <li><a href="/admin/orders" class="nav-link active" style="color: white;">Orders</a></li>
        <li><a href="/products" class="nav-link" style="color: var(--gray-300);">‚Üê Store</a></li>
        <li><a href="/auth/logout" class="nav-link" style="color: var(--gray-300);">Logout</a></li>
      </ul>
    </div>
  </nav>

  <!-- Main Content -->
  <div style="padding: var(--spacing-2xl) 0; background: var(--gray-50); min-height: calc(100vh - 80px);">
    <div class="container">
      <!-- Page Header -->
      <div class="mb-xl">
        <h1>Order Management</h1>
        <p style="color: var(--gray-600); margin: 0;">Process and track customer orders</p>
      </div>

      <!-- Orders Table -->
      <div class="card">
        <div class="card-body">
          <table id="ordersTable" class="display" style="width:100%">
            <thead>
              <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Items</th>
                <th>Total Amount</th>
                <th>Status</th>
                <th>Order Date</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% orders.forEach(order => { %>
                <tr>
                  <td>#<%= order.id %></td>
                  <td>
                    <div>
                      <strong><%= order.user.name || 'Guest' %></strong><br>
                      <span style="font-size: 0.813rem; color: var(--gray-600);"><%= order.user.email %></span>
                    </div>
                  </td>
                  <td><%= order.order_items.length %> item<%= order.order_items.length > 1 ? 's' : '' %></td>
                  <td>‚Çπ<%= order.total_amount.toLocaleString() %></td>
                  <td>
                    <span class="badge 
                      <%= order.status === 'confirmed' ? 'badge-success' : 
                          order.status === 'pending' ? 'badge-warning' : 
                          order.status === 'shipped' ? 'badge-primary' : 
                          order.status === 'delivered' ? 'badge-success' : 
                          'badge-error' %>">
                      <%= order.status.toUpperCase() %>
                    </span>
                  </td>
                  <td>
                    <%= new Date(order.order_date).toLocaleDateString('en-IN', { 
                      day: '2-digit', 
                      month: 'short', 
                      year: 'numeric' 
                    }) %>
                  </td>
                  <td>
                    <a href="/admin/orders/<%= order.id %>" class="btn btn-primary btn-sm">
                      üëÅÔ∏è View Details
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- jQuery (required for DataTables) -->
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <!-- DataTables JS -->
  <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

  <script>
    $(document).ready(function() {
      $('#ordersTable').DataTable({
        order: [[0, 'desc']], // Sort by Order ID descending
        pageLength: 10,
        language: {
          search: "Search orders:",
          lengthMenu: "Show _MENU_ orders per page",
          info: "Showing _START_ to _END_ of _TOTAL_ orders",
          infoEmpty: "No orders available",
          infoFiltered: "(filtered from _MAX_ total orders)",
          zeroRecords: "No matching orders found"
        },
        columnDefs: [
          { orderable: false, targets: 6 } // Disable sorting on Actions column
        ]
      });
    });
  </script>

  <style>
    .nav-link.active {
      background: rgba(255, 255, 255, 0.1) !important;
      color: white !important;
    }

    .nav-link:hover {
      background: rgba(255, 255, 255, 0.05) !important;
    }

    /* DataTables Custom Styling */
    .dataTables_wrapper {
      padding: var(--spacing-md) 0;
    }

    .dataTables_filter input {
      border: 1px solid var(--gray-300);
      border-radius: var(--radius-md);
      padding: 0.5rem 1rem;
      margin-left: var(--spacing-sm);
    }

    .dataTables_length select {
      border: 1px solid var(--gray-300);
      border-radius: var(--radius-md);
      padding: 0.5rem;
      margin: 0 var(--spacing-sm);
    }

    table.dataTable thead th {
      background: var(--gray-100);
      font-weight: 700;
      border-bottom: 2px solid var(--gray-300);
    }

    table.dataTable tbody tr:hover {
      background: var(--gray-50);
    }

    .dataTables_paginate .paginate_button {
      padding: 0.5rem 1rem !important;
      margin: 0 0.25rem !important;
      border-radius: var(--radius-md) !important;
    }

    .dataTables_paginate .paginate_button.current {
      background: var(--primary) !important;
      color: white !important;
      border: 1px solid var(--primary) !important;
    }

    @media (max-width: 768px) {
      .dataTables_wrapper .dataTables_filter,
      .dataTables_wrapper .dataTables_length {
        text-align: left !important;
        margin-bottom: var(--spacing-md);
      }

      table.dataTable {
        font-size: 0.875rem;
      }
    }
  </style>
</body>
</html>
