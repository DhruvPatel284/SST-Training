<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Address - ShopHub</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar">
    <div class="container navbar-container">
      <a href="/products" class="navbar-brand">üõçÔ∏è ShopHub</a>
      <ul class="navbar-nav">
        <li><a href="/products" class="nav-link">Products</a></li>
        <li><a href="/cart" class="nav-link">Cart</a></li>
        <li><a href="/orders" class="nav-link">Orders</a></li>
        <li><a href="/profile" class="nav-link active">Profile</a></li>
        <li><a href="/auth/logout" class="nav-link">Logout</a></li>
      </ul>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="profile-page">
    <div class="container container-md">
      <!-- Breadcrumb -->
      <div class="mb-lg" style="display: flex; align-items: center; gap: var(--spacing-sm); font-size: 0.875rem;">
        <a href="/profile" class="link">Profile</a>
        <span style="color: var(--gray-400);">/</span>
        <a href="/profile/addresses" class="link">Addresses</a>
        <span style="color: var(--gray-400);">/</span>
        <span style="color: var(--gray-600);">Edit</span>
      </div>

      <!-- Page Header -->
      <div class="mb-xl">
        <h1>Edit Address</h1>
        <p style="color: var(--gray-600); margin: 0;">Update your delivery address details</p>
      </div>

      <!-- Form Card -->
      <div class="card">
        <div class="card-body">
          <!-- UPDATE FORM -->
          <form method="POST" action="/profile/addresses/<%= address.id %>?_method=PATCH" id="updateForm">
            <!-- Address Line -->
            <div class="form-group">
              <label for="address" class="form-label required">Street Address</label>
              <input
                type="text"
                id="address"
                name="address"
                class="form-input"
                placeholder="House/Flat No., Building Name, Street"
                value="<%= address.address %>"
                required
                autofocus
              />
              <span class="form-hint">Include landmarks for easy delivery</span>
            </div>

            <!-- District & State -->
            <div class="grid grid-cols-2">
              <div class="form-group">
                <label for="district" class="form-label required">District</label>
                <input
                  type="text"
                  id="district"
                  name="district"
                  class="form-input"
                  placeholder="Enter district"
                  value="<%= address.district %>"
                  required
                />
              </div>

              <div class="form-group">
                <label for="state" class="form-label required">State</label>
                <input
                  type="text"
                  id="state"
                  name="state"
                  class="form-input"
                  placeholder="Enter state"
                  value="<%= address.state %>"
                  required
                />
              </div>
            </div>

            <!-- Pincode -->
            <div class="form-group">
              <label for="pincode" class="form-label required">PIN Code</label>
              <input
                type="text"
                id="pincode"
                name="pincode"
                class="form-input"
                placeholder="6-digit PIN code"
                pattern="[0-9]{6}"
                maxlength="6"
                value="<%= address.pincode %>"
                required
              />
              <span class="form-hint">6-digit postal code</span>
            </div>

            <!-- Warning Alert -->
            <div class="alert alert-warning">
              <span>‚ö†Ô∏è</span>
              <div>
                <strong>Update Existing Orders</strong>
                <p style="margin: 0; font-size: 0.875rem;">Please note that changing this address will not affect orders already placed.</p>
              </div>
            </div>

            <!-- Form Actions -->
            <div style="display: flex; gap: var(--spacing-md); justify-content: space-between; margin-top: var(--spacing-xl);">
              <!-- Delete Button (separate, not in form) -->
              <button type="button" class="btn btn-danger" onclick="deleteAddress()">
                üóëÔ∏è Delete Address
              </button>
              
              <!-- Update Actions -->
              <div style="display: flex; gap: var(--spacing-md);">
                <a href="/profile/addresses" class="btn btn-secondary">
                  Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                  Update Address
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <!-- Address Preview Card -->
      <div class="card mt-xl">
        <div class="card-header">
          <h3 class="card-title" style="font-size: 1rem;">Address Preview</h3>
        </div>
        <div class="card-body">
          <div style="padding: var(--spacing-lg); background: var(--gray-50); border-radius: var(--radius-md); border-left: 4px solid var(--primary);">
            <p style="margin: 0; color: var(--gray-700); line-height: 1.8;">
              <strong><%= address.address %></strong><br>
              <%= address.district %>, <%= address.state %><br>
              PIN: <strong><%= address.pincode %></strong>
            </p>
          </div>
          <p style="margin-top: var(--spacing-md); font-size: 0.875rem; color: var(--gray-600);">
            This is how your address will appear on delivery labels
          </p>
        </div>
      </div>
    </div>
  </div>

  <style>
    @media (max-width: 768px) {
      .grid-cols-2 {
        grid-template-columns: 1fr !important;
      }

      div[style*="justify-content: space-between"] {
        flex-direction: column;
      }

      div[style*="justify-content: space-between"] .btn,
      div[style*="justify-content: space-between"] > div {
        width: 100%;
      }

      div[style*="justify-content: space-between"] > div {
        display: flex;
        flex-direction: column-reverse;
        gap: var(--spacing-md);
      }

      div[style*="justify-content: space-between"] > div .btn {
        width: 100%;
      }
    }
  </style>

  <script>
    // Delete address function
    function deleteAddress() {
      if (confirm('Are you sure you want to delete this address? This action cannot be undone.')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = '/profile/addresses/<%= address.id %>';
        
        const methodInput = document.createElement('input');
        methodInput.type = 'hidden';
        methodInput.name = '_method';
        methodInput.value = 'DELETE';
        
        form.appendChild(methodInput);
        document.body.appendChild(form);
        form.submit();
      }
    }

    // Real-time address preview update
    const inputs = ['address', 'district', 'state', 'pincode'];
    inputs.forEach(fieldName => {
      const input = document.getElementById(fieldName);
      if (input) {
        input.addEventListener('input', updatePreview);
      }
    });

    function updatePreview() {
      const address = document.getElementById('address').value;
      const district = document.getElementById('district').value;
      const state = document.getElementById('state').value;
      const pincode = document.getElementById('pincode').value;

      const preview = document.querySelector('.card-body p[style*="line-height"]');
      if (preview) {
        preview.innerHTML = `
          <strong>${address || 'Street Address'}</strong><br>
          ${district || 'District'}, ${state || 'State'}<br>
          PIN: <strong>${pincode || 'XXXXXX'}</strong>
        `;
      }
    }
  </script>
</body>
</html>