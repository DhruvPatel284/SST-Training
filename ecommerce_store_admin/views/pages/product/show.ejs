<%- contentFor('HeaderCss') %>

<%- contentFor('body') %>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">Product Details</h5>
        <div>
          <a href="/products/<%- product.id %>/edit" class="btn btn-success">
            <i class="ri-edit-box-line align-bottom me-1"></i>
            Edit Product
          </a>
          <a href="/products" class="btn btn-secondary">
            <i class="ri-arrow-left-line align-bottom me-1"></i>
            Back to List
          </a>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <!-- Product Images -->
          <div class="col-xxl-6">
            <% if (product.images && product.images.length > 0) { %>
            <div id="productImageCarousel" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-indicators">
                <% product.images.forEach((image, index) => { %>
                <button
                  type="button"
                  data-bs-target="#productImageCarousel"
                  data-bs-slide-to="<%= index %>"
                  class="<%= index === 0 ? 'active' : '' %>"
                  aria-label="Slide <%= index + 1 %>"
                ></button>
                <% }) %>
              </div>
              <div class="carousel-inner">
                <% product.images.forEach((image, index) => { %>
                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                  <img
                    src="/uploads/products/<%= image.filename %>"
                    class="d-block w-100 rounded"
                    alt="Product image <%= index + 1 %>"
                    style="max-height: 500px; object-fit: contain; background: #f8f9fa;"
                  />
                </div>
                <% }) %>
              </div>
              <% if (product.images.length > 1) { %>
              <button
                class="carousel-control-prev"
                type="button"
                data-bs-target="#productImageCarousel"
                data-bs-slide="prev"
              >
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button
                class="carousel-control-next"
                type="button"
                data-bs-target="#productImageCarousel"
                data-bs-slide="next"
              >
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
              <% } %>
            </div>
            <!-- Thumbnail Row -->
            <% if (product.images.length > 1) { %>
            <div class="d-flex gap-2 mt-3 flex-wrap">
              <% product.images.forEach((image, index) => { %>
              <img
                src="/uploads/products/<%= image.filename %>"
                alt="Thumbnail <%= index + 1 %>"
                class="border rounded cursor-pointer"
                style="width: 80px; height: 80px; object-fit: cover; cursor: pointer;"
                data-bs-target="#productImageCarousel"
                data-bs-slide-to="<%= index %>"
              />
              <% }) %>
            </div>
            <% } %>
            <% } else { %>
            <div class="text-center p-5 bg-light rounded">
              <i class="ri-image-line" style="font-size: 120px; color: #ccc;"></i>
              <p class="text-muted mt-3">No images available</p>
              <a href="/products/<%- product.id %>/edit" class="btn btn-primary btn-sm">
                Upload Images
              </a>
            </div>
            <% } %>
          </div>

          <!-- Product Info -->
          <div class="col-xxl-6">
            <div class="card shadow-sm mb-4">
              <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                  <div class="flex-grow-1">
                    <h5 class="card-title mb-1">Product Information</h5>
                  </div>
                  <% if (product.stock > 0) { %>
                  <span class="badge bg-success-subtle text-success fw-semibold">In Stock</span>
                  <% } else { %>
                  <span class="badge bg-danger-subtle text-danger fw-semibold">Out of Stock</span>
                  <% } %>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item px-0 d-flex align-items-center">
                    <i class="ri-price-tag-3-line text-primary me-2"></i>
                    <span><strong>Product ID:</strong> <%= product.id %></span>
                  </li>
                  <li class="list-group-item px-0 d-flex align-items-center">
                    <i class="ri-shopping-bag-line text-info me-2"></i>
                    <span><strong>Name:</strong> <%= product.name %></span>
                  </li>
                  <li class="list-group-item px-0 d-flex align-items-center">
                    <i class="ri-money-dollar-circle-line text-success me-2"></i>
                    <span><strong>Price:</strong> $<%= product.price.toFixed(2) %></span>
                  </li>
                  <li class="list-group-item px-0 d-flex align-items-center">
                    <i class="ri-stock-line text-warning me-2"></i>
                    <span><strong>Stock:</strong> <%= product.stock %> units</span>
                  </li>
                  <li class="list-group-item px-0 d-flex align-items-center">
                    <i class="ri-folder-line text-danger me-2"></i>
                    <span><strong>Category:</strong> <%= product.category %></span>
                  </li>
                  <li class="list-group-item px-0 d-flex align-items-center">
                    <i class="ri-image-line text-secondary me-2"></i>
                    <span><strong>Images:</strong> <%= product.images ? product.images.length : 0 %> / 5</span>
                  </li>
                </ul>
              </div>
            </div>

            <div class="card shadow-sm">
              <div class="card-body">
                <h6 class="text-uppercase fw-semibold text-muted mb-3">
                  Product Stats
                </h6>
                <div class="d-flex flex-wrap gap-3">
                  <div>
                    <p class="text-muted mb-1">Total Orders</p>
                    <h4 class="mb-0"><%= product.orderCount || 0 %></h4>
                  </div>
                  <div>
                    <p class="text-muted mb-1">In Cart</p>
                    <h4 class="mb-0"><%= product.cartQuantity || 0 %></h4>
                  </div>
                  <div>
                    <p class="text-muted mb-1">Stock Status</p>
                    <% if (product.stock > 10) { %>
                    <span class="badge bg-success-subtle text-success">Good Stock</span>
                    <% } else if (product.stock > 0) { %>
                    <span class="badge bg-warning-subtle text-warning">Low Stock</span>
                    <% } else { %>
                    <span class="badge bg-danger-subtle text-danger">Out of Stock</span>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- contentFor('FooterJs') %>
