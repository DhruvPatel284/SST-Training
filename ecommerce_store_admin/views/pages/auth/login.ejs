<%- contentFor('HeaderCss') %>
<%- contentFor('body') %>
<div class="auth-page-wrapper pt-5">
  <!-- auth page bg -->
  <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
    <div class="bg-overlay"></div>

    <div class="shape">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        version="1.1"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        viewBox="0 0 1440 120"
      >
        <path
          d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"
        ></path>
      </svg>
    </div>
  </div>

  <!-- auth page content -->
  <div class="auth-page-content">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="text-center mt-sm-5 mb-4 text-white-50">
            <div
              class="auth-logo d-flex align-items-center justify-content-center gap-3"
            >
              <img src="/assets/images/logo-light.png" alt="" height="70" />
            </div>
            <p class="mt-3 fs-15 fw-medium">Admin Dashboard</p>
          </div>
        </div>
      </div>
      <!-- end row -->

      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 col-xl-5">
          <div class="card mt-4">
            <div class="card-body p-4">
              <div class="text-center mt-2">
                <h5 class="text-primary">Welcome Back !</h5>
                <p class="text-muted">Sign in to continue</p>
              </div>
              <div class="p-2 mt-4">
                <% if(typeof errors === "string") { %>
                <div
                  class="alert alert-danger text-center mb-4 flash"
                  role="alert"
                >
                  <%= errors %>
                </div>
                <% } %>
                <form action="/login" method="post">
                  <div class="mb-3">
                    <%- include('../../partials/input', { name: 'email', type:
                    'email', required: true, placeholder:
                    'e.g.john.doe@example.com'}) %>
                  </div>

                  <div class="mb-3">
                    <%- include('../../partials/input', { name: 'password',
                    type: 'password', required: true, id: 'password',
                    placeholder: 'Enter password'}) %>
                  </div>

                  <div class="mt-4">
                    <button class="btn btn-success w-100" type="submit">
                      Sign In
                    </button>
                  </div>
                </form>
              </div>
            </div>
            <!-- end card body -->
          </div>
          <!-- end card -->
        </div>
      </div>
      <!-- end row -->
    </div>
    <!-- end container -->
  </div>
  <!-- end auth page content -->

  <!-- footer -->
  <footer class="footer">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="text-center">
            <p class="mb-0 text-muted">
              &copy;
              <script>
                document.write(new Date().getFullYear());
              </script>
              Velzon
            </p>
          </div>
        </div>
      </div>
    </div>
  </footer>
  <!-- end Footer -->
</div>
<!-- end auth-page-wrapper -->
<%- contentFor('FooterJs') %>

<!-- particles js -->
<script src="/assets/libs/particles.js/particles.js"></script>
<!-- particles app js -->
<script src="/assets/js/pages/particles.app.js"></script>

<script src="/assets/js/auto-password-eye-handler.js"></script>
